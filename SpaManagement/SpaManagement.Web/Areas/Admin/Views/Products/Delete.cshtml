@model SpaManagement.Web.Models.SanPham
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xóa sản phẩm";
}
<h2 class="text-danger mb-4">Xóa sản phẩm</h2>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="alert alert-warning">Bạn có chắc chắn muốn xóa sản phẩm này không?</div>
<div class="card shadow-sm p-4 bg-white mb-3">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.HinhAnhURL))
            {
                <img src="@Model.HinhAnhURL" alt="Ảnh sản phẩm" class="img-fluid rounded mb-3" style="max-width:100%;max-height:200px;object-fit:cover;" />
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm</dt>
                <dd class="col-sm-8">@Model.TenSanPham</dd>
                <dt class="col-sm-4">Danh mục</dt>
                <dd class="col-sm-8">@Model.DanhMucSanPham?.TenDanhMuc</dd>
                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@Model.Gia.ToString("N0") VNĐ</dd>
                <dt class="col-sm-4">Số lượng tồn</dt>
                <dd class="col-sm-8">@Model.SoLuongTon</dd>
            </dl>
        </div>
    </div>
</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdSanPham" />
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Index")" class="btn btn-secondary me-2">Quay lại</a>
        <button type="submit" class="btn btn-danger">Xóa</button>
    </div>
</form> 