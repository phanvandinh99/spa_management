@model SpaManagement.Web.Models.SanPham
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<h2 class="text-primary mb-4">Chi tiết sản phẩm</h2>
<div class="card shadow-sm p-4 bg-white">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.HinhAnhURL))
            {
                <img src="@Model.HinhAnhURL" alt="Ảnh sản phẩm" class="img-fluid rounded mb-3" style="max-width:100%;max-height:300px;object-fit:cover;" />
            }
            else
            {
                <div class="text-muted">Không có hình ảnh</div>
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm</dt>
                <dd class="col-sm-8">@Model.TenSanPham</dd>
                <dt class="col-sm-4">Danh mục</dt>
                <dd class="col-sm-8">@Model.DanhMucSanPham?.TenDanhMuc</dd>
                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@Model.Gia.ToString("N0") VNĐ</dd>
                <dt class="col-sm-4">Số lượng tồn</dt>
                <dd class="col-sm-8">@Model.SoLuongTon</dd>
                <dt class="col-sm-4">Mô tả</dt>
                <dd class="col-sm-8">@Model.MoTa</dd>
            </dl>
            <div class="mt-4">
                <a href="@Url.Action("Edit", new { id = Model.IdSanPham })" class="btn btn-primary me-2">
                    <i class="fa fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div> 