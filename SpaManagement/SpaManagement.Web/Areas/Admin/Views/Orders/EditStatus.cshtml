@model SpaManagement.Web.Models.DonHang
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Cập nhật Đơn hàng";
}
<h2 class="text-primary mb-4">Cập nhật Đơn hàng</h2>
<form asp-action="EditStatus" asp-controller="Orders" asp-area="Admin" method="post" class="card p-4 shadow-sm bg-white">
    @Html.AntiForgeryToken()
    <input type="hidden" name="IdDonHang" value="@Model.IdDonHang" />
    <div class="mb-3">
        <label class="form-label">Trạng thái</label>
        <select name="TrangThai" class="form-select" required>
            <option value="ChoThanhToan" @(Model.TrangThai == "ChoThanhToan" ? "selected" : "")>Chờ thanh toán</option>
            <option value="DangXuLy" @(Model.TrangThai == "DangXuLy" ? "selected" : "")>Đang xử lý</option>
            <option value="DangGiao" @(Model.TrangThai == "DangGiao" ? "selected" : "")>Đang giao</option>
            <option value="DaGiao" @(Model.TrangThai == "DaGiao" ? "selected" : "")>Đã giao</option>
            <option value="DaHuy" @(Model.TrangThai == "DaHuy" ? "selected" : "")>Đã hủy</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Khách hàng</label>
        <input class="form-control" value="@Model.KhachHang?.HoTen" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Ngày đặt</label>
        <input class="form-control" value="@Model.NgayDatHang.ToString("dd/MM/yyyy HH:mm")" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Tổng tiền</label>
        <input class="form-control" value="@Model.TongTien.ToString("N0") + " VNĐ"" readonly />
    </div>
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Index")" class="btn btn-secondary me-2">Quay lại</a>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form> 