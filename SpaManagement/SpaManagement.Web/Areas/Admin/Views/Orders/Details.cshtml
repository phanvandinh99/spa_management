@model SpaManagement.Web.Models.DonHang
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết Đơn hàng";
}
<h2 class="text-primary mb-4">Chi tiết Đơn hàng</h2>
<div class="card shadow-sm p-4 bg-white mb-3">
    <dl class="row">
        <dt class="col-sm-3">Mã đơn</dt>
        <dd class="col-sm-9">@Model.IdDonHang</dd>
        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.KhachHang?.HoTen</dd>
        <dt class="col-sm-3">Ngày đặt</dt>
        <dd class="col-sm-9">@Model.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>
        <dt class="col-sm-3">Tổng tiền</dt>
        <dd class="col-sm-9">@Model.TongTien.ToString("N0") VNĐ</dd>
    </dl>
    <h5 class="mt-4">Danh sách sản phẩm</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ct in Model.ChiTietDonHangs)
            {
                <tr>
                    <td>@ct.SanPham?.TenSanPham</td>
                    <td>@ct.SoLuong</td>
                    <td>@ct.DonGia.ToString("N0") VNĐ</td>
                    <td>@string.Format("{0:N0}", (ct.SoLuong * ct.DonGia)) VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">
        <a href="@Url.Action("EditStatus", new { id = Model.IdDonHang })" class="btn btn-primary me-2">
            <i class="fa fa-edit"></i> Sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    </div>
</div> 