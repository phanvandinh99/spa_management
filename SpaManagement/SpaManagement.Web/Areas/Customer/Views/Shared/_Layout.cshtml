<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spa Management</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Customer CSS -->
    <link href="~/Customer/css/customer.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home", new { area = "Customer" })">
                <i class="fa fa-star me-2"></i>Spa Management
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "Customer" })">
                            Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Services", new { area = "Customer" })">
                            Dịch vụ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Products", new { area = "Customer" })">
                            Sản phẩm
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "About", new { area = "Customer" })">
                            Giới thiệu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Contact", new { area = "Customer" })">
                            Liên hệ
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="#" id="cartLink">
                            <i class="fa fa-shopping-cart me-1"></i>Giỏ hàng
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartCount" style="display: none;">
                                0
                            </span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fa fa-user me-1"></i>Tài khoản
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Login", "Account", new { area = "Customer" })"><i class="fa fa-sign-in me-2"></i>Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Register", "Account", new { area = "Customer" })"><i class="fa fa-user me-2"></i>Đăng ký</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Booking", new { area = "Customer" })"><i class="fa fa-calendar me-2"></i>Lịch hẹn</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Review", new { area = "Customer" })"><i class="fa fa-star me-2"></i>Đánh giá</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="main-content" style="margin-top: 140px;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5><i class="fa fa-star me-2"></i>Spa Management</h5>
                    <p class="text-muted">Hệ thống quản lý spa chuyên nghiệp, mang đến trải nghiệm tốt nhất cho khách hàng.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="text-light me-3"><i class="fa fa-camera"></i></a>
                        <a href="#" class="text-light me-3"><i class="fa fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fa fa-youtube-play"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Dịch vụ</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">Massage trị liệu</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Chăm sóc da chuyên sâu</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Triệt lông công nghệ cao</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Tư vấn chăm sóc da</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Liên hệ</h5>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-map-marker me-2"></i>123 Đường ABC, Quận 1, TP.HCM</li>
                        <li><i class="fa fa-phone me-2"></i>090 123 4567</li>
                        <li><i class="fa fa-envelope me-2"></i>info@spamanagement.com</li>
                        <li><i class="fa fa-clock me-2"></i>8:00 - 22:00 (Thứ 2 - Chủ nhật)</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">&copy; 2024 Spa Management. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-muted text-decoration-none me-3">Chính sách bảo mật</a>
                    <a href="#" class="text-muted text-decoration-none me-3">Điều khoản sử dụng</a>
                    <a href="#" class="text-muted text-decoration-none">Sitemap</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 