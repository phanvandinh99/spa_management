@{
    ViewData["Title"] = "Trang chủ - Khách hàng";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="hero-section text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <h1 class="display-4 text-white mb-4">Chào mừng đến với Spa Management</h1>
            <p class="lead text-white mb-4">Hệ thống quản lý spa chuyên nghiệp</p>
            <div class="row justify-content-center">
                <div class="col-md-3 mb-3">
                    <div class="card bg-white shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Đặt lịch hẹn</h5>
                            <p class="card-text">Đặt lịch hẹn dịch vụ spa nhanh chóng</p>
                            <a href="#" class="btn btn-primary">Đặt lịch ngay</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-white shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Mua sản phẩm</h5>
                            <p class="card-text">Mua sản phẩm chăm sóc da chất lượng</p>
                            <a href="#" class="btn btn-success">Mua sản phẩm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-white shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-star fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Đánh giá</h5>
                            <p class="card-text">Đánh giá dịch vụ và sản phẩm</p>
                            <a href="#" class="btn btn-warning">Đánh giá ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div class="container py-5">
        <h2 class="text-center mb-5">Dịch vụ của chúng tôi</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/service1.jpg" class="card-img-top" alt="Massage" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Massage trị liệu</h5>
                        <p class="card-text">Liệu trình massage giúp thư giãn, giảm đau nhức và cải thiện tuần hoàn máu.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">600,000 VNĐ</span>
                            <a href="#" class="btn btn-outline-primary">Đặt lịch</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/service2.jpg" class="card-img-top" alt="Facial" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Chăm sóc da chuyên sâu</h5>
                        <p class="card-text">Làm sạch sâu lỗ chân lông, loại bỏ mụn cám, giúp da sáng mịn.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">850,000 VNĐ</span>
                            <a href="#" class="btn btn-outline-primary">Đặt lịch</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/service3.jpg" class="card-img-top" alt="Hair Treatment" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Triệt lông công nghệ cao</h5>
                        <p class="card-text">Liệu trình 10 buổi, bảo hành 5 năm với công nghệ Laser Diode.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">1,500,000 VNĐ</span>
                            <a href="#" class="btn btn-outline-primary">Đặt lịch</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container py-5 bg-light">
        <h2 class="text-center mb-5">Sản phẩm nổi bật</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/product1.jpg" class="card-img-top" alt="Serum" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title">Serum cấp ẩm Hyaluronic Acid</h6>
                        <p class="card-text small">Serum giúp cấp ẩm sâu, cho làn da căng bóng.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">550,000 VNĐ</span>
                            <a href="#" class="btn btn-sm btn-outline-primary">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/product2.jpg" class="card-img-top" alt="Sunscreen" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title">Kem chống nắng SPF 50+</h6>
                        <p class="card-text small">Bảo vệ da tối ưu, không gây bết dính.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">480,000 VNĐ</span>
                            <a href="#" class="btn btn-sm btn-outline-primary">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/product3.jpg" class="card-img-top" alt="Lotion" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title">Sữa dưỡng thể Oliu</h6>
                        <p class="card-text small">Dưỡng ẩm, làm mềm và mịn da toàn thân.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">350,000 VNĐ</span>
                            <a href="#" class="btn btn-sm btn-outline-primary">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Customer/images/product4.jpg" class="card-img-top" alt="Mask" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title">Mặt nạ dưỡng ẩm</h6>
                        <p class="card-text small">Mặt nạ dưỡng ẩm chuyên sâu cho da khô.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">120,000 VNĐ</span>
                            <a href="#" class="btn btn-sm btn-outline-primary">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Customer/js/customer.js"></script>
} 