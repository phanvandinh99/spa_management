@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Liên hệ";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="text-primary mb-4">Liên hệ với chúng tôi</h2>
            <ul class="list-unstyled mb-4">
                <li class="mb-3">
                    <i class="fa fa-map-marker me-2 text-primary"></i>
                    <strong>Địa chỉ:</strong> 123 Đường ABC, Quận 1, TP.HCM
                </li>
                <li class="mb-3">
                    <i class="fa fa-phone me-2 text-primary"></i>
                    <strong>Điện thoại:</strong> 090 123 4567
                </li>
                <li class="mb-3">
                    <i class="fa fa-envelope me-2 text-primary"></i>
                    <strong>Email:</strong> info@spamanagement.com
                </li>
                <li class="mb-3">
                    <i class="fa fa-clock-o me-2 text-primary"></i>
                    <strong>Giờ làm việc:</strong> 8:00 - 22:00 (Thứ 2 - Chủ nhật)
                </li>
            </ul>
            <div class="ratio ratio-16x9 rounded shadow-sm overflow-hidden">
                <iframe src="https://www.google.com/maps?q=10.7769,106.7009&z=15&output=embed" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        <div class="col-lg-6">
            <h2 class="text-primary mb-4">Gửi liên hệ</h2>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="name" placeholder="Nhập họ tên của bạn">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Nhập email của bạn">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Nội dung</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Nhập nội dung liên hệ..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary px-4">Gửi liên hệ</button>
            </form>
        </div>
    </div>
</div>

<style>
    .ratio iframe {
        border-radius: 12px;
    }
    .form-label {
        font-weight: 500;
    }
    .btn-primary {
        border-radius: 8px;
    }
</style> 