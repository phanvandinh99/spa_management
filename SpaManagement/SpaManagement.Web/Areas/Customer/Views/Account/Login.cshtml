@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center">Đăng nhập</h3>
                    <form method="post" action="/Customer/Account/Login">
                        <div class="mb-3">
                            <label for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" required maxlength="100" placeholder="Nhập tên đăng nhập">
                        </div>
                        <div class="mb-3">
                            <label for="MatKhau" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="MatKhau" name="MatKhau" required maxlength="255" placeholder="Nhập mật khẩu">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                            <label class="form-check-label" for="RememberMe">Ghi nhớ đăng nhập</label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </form>
                    <div class="mt-3 text-center">
                        <span>Bạn chưa có tài khoản?</span>
                        <a href="@Url.Action("Register", "Account", new { area = "Customer" })">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 