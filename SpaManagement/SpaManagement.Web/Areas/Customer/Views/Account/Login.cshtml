@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-primary mb-4 text-center">Đăng nhập tài khoản</h2>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["Success"]</div>
                    }
                    @if (!ViewContext.ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewContext.ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="TenDangNhap" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" required />
                        </div>
                        <div class="mb-3">
                            <label for="MatKhau" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="MatKhau" name="MatKhau" required />
                        </div>
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2">Đăng nhập</button>
                        </div>
                        <div class="text-center mt-3">
                            <span>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account", new { area = "Customer" })">Đăng ký</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card { border-radius: 18px; }
    .btn-primary { border-radius: 8px; font-weight: 500; font-size: 1.1em; }
    .form-label { font-weight: 500; }
</style> 